@model ProjetFinalMVC.DAL.Articles
@{
    ViewBag.Title = "FindById";
}


<h2>FindById</h2>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #DDD;
    }

    tr:hover {
        background-color: #D6EEEE;
    }
</style>

<table>
    <tr>
        <th>id</th>
        <th>nom</th>
        <th>marque</th>
        <th>prix</th>
        <th>categorie</th>
        <th>souscategorie</th>
        <th>description</th>
        <th>couleur</th>
        <th>image</th>
    </tr>
    @*@foreach (var x in @Model)*@

    <tr>
        <td>@Model.Id</td>
        <td>@Model.Nom</td>
        <td>@Model.Marque</td>
        <td>@Model.Prix</td>
        <td>@Model.Categorie</td>
        <td>@Model.SousCategorie</td>
        <td>@Model.Description</td>
        <td>@Model.Couleur</td>
        <td>@Model.Image</td>
    </tr>


</table>


