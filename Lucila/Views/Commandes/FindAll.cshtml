@model IEnumerable<ProjetFinalMVC.DAL.Commandes>
@{
    ViewBag.Title = "FindAll";
}

<h2>FindAll</h2>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #DDD;
    }

    tr:hover {
        background-color: #D6EEEE;
    }
</style>
<table style="width:25%">
    <tr>
        <th>id</th>
        <th>idclient</th>
        <th>date</th>
        <th>detail</th>
        <th>prixtotal</th>
    </tr>
    @foreach (var x in @Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.IdClient</td>
            <td>@x.Date</td>
            <td>@x.Detail</td>
            <td>@x.PrixTotal</td>
        </tr>
    }

</table>
